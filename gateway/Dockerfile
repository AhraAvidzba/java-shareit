FROM amazoncorretto:11-alpine-jdk
COPY target/*.jar app.jar
ENTRYPOINT ["java","-jar","/app.jar"]
#В докер контейнере часовой пояс по умолчанию utc+0
#а в тестах постман часовой пояс как на компьютере где они запускаются,
#поэтому для успешного прохождения тестов в постман необходимо в докерфайл
#установить часовой пояс в контейнере такой же как на компьютере запуска постман тестов.
#В тестах на гитхабе же часовой пояс по умолчанию тоже utc+0 потому при пуше на гитхаб
#для успешного прохождения тестов там, необходимо убрать отсюда строку изменения часового пояса
#ENV TZ=Europe/Moscow